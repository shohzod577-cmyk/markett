# Django Core Settings
SECRET_KEY=your-super-secret-key-here-change-in-production
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,.elasticbeanstalk.com,.compute.amazonaws.com,yourdomain.com

# Database - For Elastic Beanstalk, use RDS
DATABASE_URL=postgresql://username:password@rds-endpoint:5432/markett_db
# Or individual settings:
DB_NAME=markett_db
DB_USER=markett_user
DB_PASSWORD=your-db-password
DB_HOST=your-rds-endpoint.region.rds.amazonaws.com
DB_PORT=5432

# Redis/Celery - For Elastic Beanstalk, use ElastiCache
REDIS_URL=redis://your-elasticache-endpoint:6379/0
CELERY_BROKER_URL=redis://your-elasticache-endpoint:6379/0
CELERY_RESULT_BACKEND=redis://your-elasticache-endpoint:6379/0

# AWS S3 for Media Files
USE_S3=True
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=markett-media
AWS_S3_REGION_NAME=eu-north-1
AWS_S3_CUSTOM_DOMAIN=markett-media.s3.amazonaws.com

# Email Settings
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Payment Gateway Settings
PAYME_MERCHANT_ID=your-payme-merchant-id
PAYME_SECRET_KEY=your-payme-secret-key
CLICK_MERCHANT_ID=your-click-merchant-id
CLICK_SECRET_KEY=your-click-secret-key
CLICK_SERVICE_ID=your-click-service-id

# Currency API
CURRENCY_API_KEY=your-currency-api-key

# Application Settings
LANGUAGE_CODE=uz
TIME_ZONE=Asia/Tashkent
CURRENCY=UZS
