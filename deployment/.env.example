# Django Settings
SECRET_KEY=your-secret-key-here-change-this-in-production
DEBUG=False
ALLOWED_HOSTS=your-domain.com,www.your-domain.com,your-ec2-ip

# Database Configuration (PostgreSQL on AWS RDS or local)
DB_ENGINE=django.db.backends.postgresql
DB_NAME=markett_db
DB_USER=markett_user
DB_PASSWORD=your-strong-password-here
DB_HOST=your-rds-endpoint.rds.amazonaws.com
DB_PORT=5432

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@your-domain.com

# Currency Settings
BASE_CURRENCY=UZS

# Payment Gateway Settings
CLICK_MERCHANT_ID=your-click-merchant-id
CLICK_SERVICE_ID=your-click-service-id
CLICK_SECRET_KEY=your-click-secret-key

PAYME_MERCHANT_ID=your-payme-merchant-id
PAYME_SECRET_KEY=your-payme-secret-key
PAYME_ENDPOINT=https://checkout.paycom.uz/api

UZUM_MERCHANT_ID=your-uzum-merchant-id
UZUM_SECRET_KEY=your-uzum-secret-key

# Google Maps API
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Site URL
SITE_URL=https://your-domain.com

# Redis Configuration (for Celery and Caching)
REDIS_URL=redis://localhost:6379/0

# AWS S3 Settings (Optional - for static/media files on S3)
# USE_S3=True
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
# AWS_S3_REGION_NAME=us-east-1
# AWS_S3_CUSTOM_DOMAIN=your-bucket-name.s3.amazonaws.com
